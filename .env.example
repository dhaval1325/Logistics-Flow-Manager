DATABASE_URL=postgres://user:password@localhost:5432/logistics_flow_manager
PORT=5000
# Session secret for auth cookies
SESSION_SECRET=replace_with_a_long_random_string
# If your DB requires SSL with a self-signed chain (e.g., Supabase pooler):
# PG_SSL=true
# PG_SSL_INSECURE=true

# User-Agent for geocoding requests (use a real contact if deploying)
# GEOCODE_USER_AGENT=LogisticsFlowManager/1.0 (contact: you@example.com)
# Optional: Add a default country suffix for better geocoding accuracy
# GEOCODE_DEFAULT_COUNTRY=India
# Optional: Restrict Nominatim results to specific country codes (comma separated)
# GEOCODE_COUNTRY_CODE=in

# Optional: OpenAI-compatible API for POD analysis and chat integrations
# AI_INTEGRATIONS_OPENAI_API_KEY=your_api_key
# AI_INTEGRATIONS_OPENAI_BASE_URL=https://api.openai.com/v1
